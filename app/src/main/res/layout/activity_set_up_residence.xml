<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetUpResidenceActivity"
    android:background="@drawable/officer_background">


    <TextView
        android:id="@+id/SetupResidenceTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="72dp"
        android:fontFamily="@font/gothammedium"
        android:text="Setup Residence"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/residenceAddressEditText"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/rounded_edit_text"
        android:drawableLeft="@drawable/address_icon"
        android:ems="10"
        android:hint="Enter address"
        android:textAlignment="center"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/SetupResidenceTextView" />

    <EditText
        android:id="@+id/numUnitEditText"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="57dp"
        android:background="@drawable/rounded_edit_text"
        android:drawableLeft="@drawable/rooms_icon"
        android:ems="10"
        android:hint="Enter number of units"
        android:textAlignment="center"
        android:textSize="20dp"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/residenceAddressEditText" />

    <EditText
        android:id="@+id/sizePerUnitEditText"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/rounded_edit_text"
        android:drawableLeft="@drawable/sizeperunit_icon"
        android:ems="10"
        android:hint="Enter size per unit"
        android:textAlignment="center"
        android:textSize="20dp"
        android:inputType="numberSigned"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numUnitEditText" />

    <EditText
        android:id="@+id/monthlyRentalEditText"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/rounded_edit_text"
        android:drawableLeft="@drawable/monthly_rental_icon"
        android:ems="10"
        android:hint="Enter monthly rental"
        android:textAlignment="center"
        android:textSize="20dp"
        android:inputType="numberDecimal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sizePerUnitEditText" />

    <Button
        android:id="@+id/addResidenceBtn"
        style="Widget.AppCompat.Button.Colored"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:onClick="AddResidenceButton"
        android:text="Add Residence"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/monthlyRentalEditText" />

</androidx.constraintlayout.widget.ConstraintLayout>